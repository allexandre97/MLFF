{
    "paths":{
        "out_dir":"./runs"
    },

    "training":{

        "verbose":true,

        "use_gaff_simulations":true,

        "n_frames_val_cond":500,

        "train_size":0.9,

        "n_epochs":2,

        "training_sims_first_epoch":5,

        "n_minibatch":256

    },

    "networks":{

        "learning_rate":1e-4,


        "n_atom_features_in": 29,

        "dim_embed_atom":64,
        "dim_embed_inter":64,
        "dim_hidden_dense": 128,
        "dim_hidden_gnn": 128,
        "dim_hidden_pairwise": 64,

        "gcn_conv_layer":"SAGEConv",
        "activation_str": "relu",
        "aggr_str": "mean",

        "dropout_dense":0.0,
        "n_layers_nn":2
    },

    "physics":{
        "vdw_functional_form":"dexp",
        "mixing_function":"lb",
        "bond_functional_form":"harmonic",
        "bond_r1":0.05,
        "bond_r2":0.3,
        "angle_functional_form":"harmonic",
        "angle_r1":0.0,
        "angle_r2":180.0,
        "n_proper_terms":6,
        "n_improper_terms":2
    }
}